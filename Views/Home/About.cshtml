@{
    ViewData["Title"] = "About Us";
}

    <!-- About Section -->
    <section class="py-20">
        <div class="max-w-6xl mx-auto px-4 space-y-20">
            <!-- Intro -->
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <!-- Image -->
                <div class="image-wrapper">
                    <img src="/images/profile-image.webp" alt="Profile" class="rounded-xl shadow-lg w-full">
                </div>

                <!-- Content -->
                <div class="content-wrapper">
                    <h2 class="text-3xl font-bold text-indigo-900 mb-4">
                        About Me
                    </h2>
                    <p class="text-gray-700 mb-4">
                        I'm an independent IT consultant helping organizations design, optimize, and secure their IT systems with a clear focus on business outcomes.
                    </p>
                    <p class="text-gray-700 mb-6">
                        With years of hands-on experience across different technologies and environments, I support decision-makers in building reliable, scalable, and future-proof IT solutions.
                    </p>
                    <!-- Quick Highlights -->
                    <div class="grid grid-cols-2 gap-4">

                        <div class="flex items-center space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                class="w-8 h-8 text-indigo-600">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5M12 21a9 9 0 100-18 9 9 0 000 18z" />
                            </svg>
                            <span class="text-gray-700">10+ Years Experience</span>
                        </div>

                        <div class="flex items-center space-x-3">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                class="w-8 h-8 text-indigo-600">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                            </svg>
                            <span class="text-gray-700">Customer Satisfaction</span>
                        
                        </div>

                    </div><!-- End of Quick Highlights -->
                </div><!-- End of Content -->
            </div> <!-- End of Intro -->

            <!-- Professional Background -->
            <div class="max-w-4xl">
                <h3 class="text-2xl font-bold text-indigo-900 mb-4">Professional Background</h3>
                <p class="text-gray-700 mb-4">
                    I've worked with small and medium-sized businesses, startups, and growing organizations to help them navigate technical challenges and make informed IT decisions.
                </p>
                <p class="text-gray-700">
                    My background covers IT strategy, system integration, cloud-based solutions, and cybersecurity best practices — always with a strong emphasis on reliability and long-term sustainability.
                </p>
            </div>

            <!-- How I work -->
            <div id="how-i-work">
                <h3 class="text-2xl font-bold text-indigo-900 mb-8">How I Work</h3>
                
                <!-- How I Work Steps -->
                <div class="grid md:grid-cols-4 gap-6 text-center">
            
                    <!-- Step 1 -->
                    <div class="p-6 bg-white rounded-lg shadow-lg">
                        <!-- Step Icon Wrapper -->
                        <div class="mb-4 flex justify-center">
                            <!-- Step Icon -->
                            <div class="icon w-12 h-12 bg-indigo-100 rounded-lg p-1">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
                                </svg>
            
                            </div>
                        </div>
                        <h3 class="font-semibold text-lg mb-2">
                            1. Understand
                        </h3>
                        <p class="text-gray-600">
                            I analyze your business, goals, and current IT setup.
                        </p>
                    </div>
            
                    <!-- Step 2 -->
                    <div class="p-6 bg-white rounded-lg shadow-lg">
                        <!-- Step Icon Wrapper -->
                        <div class="mb-4 flex justify-center">
                            <!-- Step Icon -->
                            <div class="icon w-12 h-12 bg-indigo-100 rounded-lg p-1">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                                </svg>
                            </div>
                        </div>
                        <h3 class="font-semibold text-lg mb-2">
                            2. Plan
                        </h3>
                        <p class="text-gray-600">
                            You get a clear, realistic strategy or recommendation.
                        </p>
                    </div>
            
                    <!-- Step 3 -->
                    <div class="p-6 bg-white rounded-lg shadow-lg">
            
                        <!-- Step Icon Wrapper -->
                        <div class="mb-4 flex justify-center">
                            <!-- Step Icon -->
                            <div class="icon w-12 h-12 bg-indigo-100 rounded-lg p-1">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
                                </svg>
                            </div> <!-- End Step Icon -->
                        </div> <!-- End Step Icon Wrapper -->
            
                        <!-- Step Title -->
                        <h3 class="font-semibold text-lg mb-2">
                            3. Execute
                        </h3>
            
                        <!-- Step Description -->
                        <p class="text-gray-600">
                            I implement solutions with precision.
                        </p>
            
                    </div>
            
                    <!-- Step 4 -->
                    <div class="p-6 bg-white rounded-lg shadow-lg">
            
                        <!-- Step Icon Wrapper -->
                        <div class="mb-4 flex justify-center">
                            <!-- Step Icon -->
                            <div class="icon w-12 h-12 bg-indigo-100 rounded-lg p-1">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M21 10.5h.375c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125H21M4.5 10.5H18V15H4.5v-4.5ZM3.75 18h15A2.25 2.25 0 0 0 21 15.75v-6a2.25 2.25 0 0 0-2.25-2.25h-15A2.25 2.25 0 0 0 1.5 9.75v6A2.25 2.25 0 0 0 3.75 18Z" />
                                </svg>
            
                            </div> <!-- End Step Icon -->
                        </div> <!-- End Step Icon Wrapper -->
            
                        <!-- Step Title -->
                        <h3 class="font-semibold text-lg mb-2">
                            4. Support
                        </h3>
            
                        <!-- Step Description -->
                        <p class="text-gray-600">
                            I ensure long-term stability and growth.
                        </p>
            
                    </div>
                </div> <!-- End How I Work Steps -->
            </div><!-- End of How I work -->

            <!-- Core Values -->
            <div class="core-values">
                <h3 class="text-2xl font-bold text-indigo-900 mb-8">Core Values</h3>
                <!-- Core Values Grid -->
                <div class="grid md:grid-cols-3 gap-8 mt-12">

                    <!-- Core Value 1 -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <!-- Value Image -->
                        <div class="image aspect-[4/3] bg-gray-200">
                            <img src="/images/clarity.webp" alt="Clarity" class="w-full h-full object-cover">
                        </div>
                        <!-- Value Content Wrapper -->
                        <div class="p-6">
                            <!-- Value Title -->
                            <h4 class="font-semibold mb-2">Clarity</h4>
                            <!-- Value Descriptions -->
                            <p class="text-gray-600">
                                I believe in clear communication and transparent decision-making.
                            </p>
                        </div>
                    </div>

                    <!-- Core Value 2 -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <!-- Value Image -->
                        <div class="image aspect-[4/3] bg-gray-200">
                            <img src="/images/reliability.webp" alt="Reliability" class="w-full h-full object-cover">
                        </div>
                        <!-- Value Content Wrapper -->
                        <div class="p-6">
                            <h4 class="font-semibold mb-2">Reliability</h4>
                            <p class="text-gray-600">
                                Solutions should work consistently and scale without unnecessary complexity.
                            </p>
                        </div>
                    </div>

                    <!-- Core Value 3 -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <!-- Value Image -->
                        <div class="image aspect-[4/3] bg-gray-200">
                            <img src="/images/security.webp" alt="Security" class="w-full h-full object-cover">
                        </div>
                        <div class="p-6">
                            <h4 class="font-semibold mb-2">Security</h4>
                            <p class="text-gray-600">
                                Security and risk awareness are essential parts of every IT decision.
                            </p>
                        </div>
                    </div>
                </div><!-- End Core Values Grid -->
            </div><!-- End of Core Values -->

            <!-- Industries -->
            <div class="nax-w-4xl">
                <h3 class="text-2xl font-bold text-indigo-900 mb-4">
                    Industries &amp; Clients
                </h3>
                <p class="text-gray-700">
                    I work with clients across various industries including professional services, e-commerce, technology, and digital businesses — both locally and remotely.
                </p>
            </div>
        </div>
    </section>

    <!-- What clients say -->
    <section class="bg-indigo-50 py-16">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h3 class="text-2xl font-bold text-indigo-900 mb-6">
                What Clients Say
            </h3>
            <!-- Content Wrapper -->
            <div class="max-w-3xl mx-auto text-center bg-indigo-50 px-8 rounded-lg">
                <div class="mb-4 flex justify-center">
                    <div class="icon w-12 h-12 bg-indigo-200 rounded-full p-2">
                        <!-- Icon goes here -->
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                        </svg>
                    </div>
                </div>
                <p class="italic text-gray-700 mb-4">
                    "Professional, reliable, and easy to work with. A true problem solver."
                </p>
                <p class="font-semibold">— Client Testimonial</p>
            </div>
        </div>
    </section>

    <!-- Technologies I work with -->
    <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto text-center px-4 space-y-6">
            <!-- Content Heading -->
            <h3 class="text-2xl font-bold text-indigo-900 mb-6">
                Tools & Technologies I Mostly Work With
            </h3>

            <!-- Content Wrapper -->
            <div class="flex justify-center items-center gap-12 flex-wrap">
                <!-- WordPress -->
                <img src="/images/wordpress-logo.svg" alt="Elementor Page Builder" class="h-12">

                <!-- Elementor -->
                <img src="/images/elementor-logo.svg" alt="WordPress" class="h-12">

                <!-- Bricks Builder -->
                <img src="/images/bricks-logo.png" alt="Bricks Builder" class="h-12">

                <!-- PHP official logo SVG -->
                <img src="/images/PHP-logo.svg" alt="PHP" class="h-12">

                <!-- Python -->
                <img src="/images/python-logo-generic.svg" alt="Python" class="h-12">
            </div>
        </div>
    </section>