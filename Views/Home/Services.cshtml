@{
    ViewData["Title"] = "Services";
}

    <!-- Page Header -->
    <header class="bg-indigo-50 py-16">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h1 class="text-4xl font-extrabold text-indigo-900 mb-4">IT Consulting Services</h1>
            <p class="text-lg text-gray-700"> Practical, scalable, and secure IT solutions designed to support your business goals.</p>
        </div>
    </header>

    <!-- Services Section -->
    <section class="py-16">
        <!-- Service Cards Wrapper -->
        <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8 px-4">

            <!-- Service Card 1 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <!-- Card Image Wrapper -->
                <div class="image bg-gray-200 aspect-[4/3]">
                    <img src="/images/it-consulting.webp" alt="Security" class="w-full h-full object-cover">
                </div>
                <!-- Card Content Wrapper -->
                <div class="p-6">
                    <!-- Card Title -->
                    <h3 class="text-xl font-semibold mb-2">IT Strategy & Consulting</h3>
                    <!-- Card Description -->
                    <p class="text-gray-600">
                        Planning and optimization for long-term growth.
                    </p>
                </div>
            </div>

            <!-- Service Card 2 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <!-- Card Image Wrapper -->
                <div class="image bg-gray-200 aspect-[4/3]">
                    <img src="/images/web-development.webp" alt="Security" class="w-full h-full object-cover">
                </div>
                <!-- Card Content Wrapper -->
                <div class="p-6">
                    <!-- Card Title -->
                    <h3 class="text-2xl font-semibold mb-3">Web Development</h3>
                    <!-- Card Description -->
                    <p class="text-gray-600 mb-4">Creating modern websites and custom solutions</p>
                </div>
            </div>

            <!-- Service Card 3 -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <!-- Card Image Wrapper -->
                <div class="image bg-gray-200 aspect-[4/3]">
                    <img src="/images/server-management.webp" alt="Security" class="w-full h-full object-cover">
                </div>
                <!-- Card Content Wrapper -->
                <div class="p-6">
                    <h3 class="text-2xl font-semibold mb-3">Server Management</h3>
                    <p class="text-gray-600 mb-4">
                        Helping you powering your servers reliably and efficiently
                    </p>
                </div>
            </div>

        </div>
    </section>

    <!-- Call-to-Action Section -->
    <section class="bg-indigo-600 py-12">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h2 class="text-2xl font-bold text-white mb-4">
                Let's Discuss Your IT Needs
            </h2>
            <a asp-controller="Home" asp-action="Contact"
                class="inline-block px-6 py-3 bg-white text-indigo-600 rounded-lg font-semibold hover:bg-gray-100">Contact
                Me</a>
        </div>
    </section>