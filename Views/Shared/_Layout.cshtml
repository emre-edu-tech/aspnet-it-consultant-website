<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT Consultant Website</title>
    <link rel="stylesheet" href="/css/tailwind.css" asp-append-version="true" />
</head>
<body class="font-sans text-gray-800">
    <!-- Navbar -->
    <nav class="bg-white shadow-md">
        <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="flex items-center">
                <img src="/images/logo.svg" alt="Logo" class="w-24 h-full mr-2">
                <span class="text-xl font-bold text-gray-600">IT Constultant</span>
            </a>

            <!-- Desktop Menu -->
            <ul class="hidden md:flex space-x-6 font-medium">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="text-indigo-600">Home</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="About" class="hover:text-indigo-600">About</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Services" class="hover:text-indigo-600">Services</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
            </ul>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden inline-flex items-center justify-center p-2 rounded-lg text-indigo-600 focus:outline-none" aria-label="Open menu">
                <!-- Hamburger Icon -->
                <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 6h18M3 12h18M3 18h18" />
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100">
            <ul class="flex flex-col px-4 py-4 space-y-4 font-medium bg-white">
                <li><a asp-controller="Home" asp-action="Index" class="text-indigo-600 block">Home</a></li>
                <li><a asp-controller="Home" asp-action="About" class="block">About</a></li>
                <li><a asp-controller="Home" asp-action="Services" class="block">Services</a></li>
                <li><a asp-controller="Home" asp-action="Contact" class="block">Contact</a></li>
            </ul>
        </div>
    </nav>
    
    @RenderBody()

    <footer class="bg-gray-100 py-6 text-center text-sm">
        &copy; 2026 <a asp-controller="Home" asp-action="Index" class="hover:text-indigo-600">IT Consultant</a>. All rights reserved.
    </footer>

    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
